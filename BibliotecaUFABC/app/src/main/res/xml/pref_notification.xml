<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/key_notification_enable_warning"
        android:title="@string/pref_title_enable_renewal_warning"
        android:summary="@string/pref_description_enable_renewal_warning"/>

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_notification_shift_options"
        android:entryValues="@array/pref_notification_shift_values"
        android:key="@string/key_notification_warning_delay"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_notification_shift"
        />

    <ListPreference
        android:defaultValue="2"
        android:entries="@array/pref_notification_sync_interval_options"
        android:entryValues="@array/pref_notification_sync_interval_values"
        android:key="@string/key_notification_sync_interval"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_notification_sync_interval"
        />

